.growthDiary{
	background-color:#f5f5f5;
}
.growthDiary-top{
	width:100%;
	height:auto;
	background-color:#2f3b4b;
	padding:40rpx 20rpx;
	display:inline-block;
	box-sizing: border-box;
}
/*个人信息*/
.topcont{
	display:inline-block;
	float:left;
	margin-bottom:25rpx;
}
.usertoux{
	width:154rpx;
	height:149rpx;
	background-size:100% 100%;
	margin-right:40rpx;
}
.pDiary{
	font-size:36rpx;
	color:#fff;
}
.fengexian{
	height:29rpx;
	margin:0 30rpx;
	border-left:3rpx solid;
	display:inline-block;
}
/*个人信息结束*/
/*模块介绍*/
.modulejs{
	width:100%;
	height:auto;
	background-color:#232b36;
	display:inline-block;
	padding:20rpx 30rpx 20rpx 20rpx;
	border-radius:8rpx;
	margin-bottom:20rpx;
	position:relative;
	box-sizing: border-box;
}
.moduleicon{
	width:35rpx;
	height:35rpx;
	background-size:100% 100%;
	margin-right:20rpx;
}
.modulejs_title,
.Signature_title{
	width:100%;
	height:35rpx;
	color:#fff;
	font-size:30rpx;
	margin-bottom:20rpx;
	display:inline-block;
}
.jieshaocont{
	font-size:26rpx;
	color:#fff;
	overflow-y:scroll;
}
/*模块介绍结束*/
/*个性签名*/
.Signature{
	width:100%;
	height:auto;
	background-color:#232b36;
	padding:20rpx 30rpx 40rpx 20rpx;
	border-radius:8rpx;
	box-sizing: border-box;
}
.moduleicon{
	width:35rpx;
	height:35rpx;
	background-size:100% 100%;
	margin-right:20rpx;
}
.geqiancont{
	font-size:26rpx;
	color:#fff;
	overflow-y:scroll;
}
/*个性签名结束*/
/*精品推荐*/
.recommend{
	width:100%;
	height:69rpx;
	background-color:#fff;
	position:relative;
	margin:10rpx 0 0 0;
	box-sizing: border-box;
}
.recommendText{
	height:33rpx;
	line-height:33rpx;
	font-size:30rpx;
	border-left:6rpx solid #080;
	padding-left:10rpx;
	position:absolute;
	top:15rpx;
	left:10rpx;
}
.hei10{
	height: 10rpx;
	background: #f5f5f5;
}
/*精品推荐结束*/
/*主内容*/
.studylist{
	width:100%;
	height:auto;
	display:inline-block;
}
.recommend-item {
	padding: 20rpx;
	width: 100%;
	background-color: #fff;
	padding-left: 30rpx;
	padding-bottom: 6rpx;
	border-bottom: 20rpx solid #f5f5f5;
	box-sizing: border-box;
}
.item-top {
	margin-bottom: 20rpx;
	position: relative;
}
.touxiangicon {
	width: 74rpx;
	height: 74rpx;
	background-size: 100% 100%;
	border-radius: 50%;
	margin-right: 25rpx;
}
.info {
	position: absolute;
	top: 5rpx;
	left: 95rpx;
	font-size: 0;
}
.item-top .title {
	font-size: 32rpx;
	color: #008800;
	display: block;
}
.item-top .time {
	font-size: 24rpx;
	color: #848484;
	margin-right: 30rpx;
}
.item-middle {
	width: 100%;
	height: auto;
}
.item-middle .conttext {
	font-size: 31rpx;
	display: inline-block;
	margin-bottom: 20rpx;
}
.middle-image image {
	width: 31%;
	height: 200rpx;
	margin-bottom: 20rpx;
	background-size: 100% 100%;
	margin-right: 10rpx;
}
.smallicon {
	height: 85rpx;
	border-top: 3rpx solid #f5f5f5;
	margin-top: 50rpx;
}
.smallicon-flex {
	width: calc(100% / 3);
	float: left;
}
.smallicon-flex image {
	vertical-align: middle;
}
.smallicon-flex text {
	line-height: 85rpx;
	font-size: 30rpx;
	margin-left: 20rpx;
}
/*主内容结束*/

